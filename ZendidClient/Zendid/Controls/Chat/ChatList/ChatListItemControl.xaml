<UserControl x:Class="Zendid.Chat.ChatListItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Zendid.Chat"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid d:DataContext="{x:Static local:ChatListItemDesignModel.Instance}" Background="Transparent">

        <TextBlock Text="{Binding Name}" Style="{StaticResource Main3}" 
                       HorizontalAlignment="Center" FontSize="25" Margin="5" VerticalAlignment="Center"/>
    </Grid>
</UserControl>