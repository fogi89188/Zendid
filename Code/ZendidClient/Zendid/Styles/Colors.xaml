<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Zendid">

    <Color x:Key="Dark">#232323</Color>
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource Dark}" />

    <Color x:Key="VeryDark">#1c1c1c</Color>
    <SolidColorBrush  x:Key="BackgroundVeryDarkBrush" Color="{StaticResource VeryDark}" />

    <Color x:Key="Black">#000000</Color>
    <SolidColorBrush x:Key="BackgroundBlackBrush" Color="{StaticResource Black}" />

    <Color x:Key="Gray">#262626</Color>
    <SolidColorBrush x:Key="BackgroundGrayBrush" Color="{StaticResource Gray}" />

    <Color x:Key="LightGray">#292929</Color>
    <SolidColorBrush x:Key="BackgroundLightGrayBrush" Color="{StaticResource LightGray}" />

    <Color x:Key="Light">#2e2e2e</Color>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource Light}" />

</ResourceDictionary>